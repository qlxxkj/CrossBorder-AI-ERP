
{
  "manifest_version": 3,
  "name": "AMZBot - 跨境 AI 采集插件",
  "version": "1.0.0",
  "description": "基于 Gemini 3 的亚马逊高效采集与优化插件",
  "action": {
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "sidePanel",
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.co.jp/*",
    "https://img.hmstu.eu.org/*",
    "https://corsproxy.io/*"
  ]
}
